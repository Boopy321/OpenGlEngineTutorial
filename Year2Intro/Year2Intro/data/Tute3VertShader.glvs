#version 410

layout(location=0) in vec4 Position; 
layout(location=1) in vec4 Colour; 
layout(location=2) in vec3 Normal; 

out vec4 vNormal;
out vec4 vColour;
out vec4 vPosition;

uniform mat4 ProjectionView; 

void main() 
{ 
	vNormal = vec4( Normal, 1);
	vColour = Colour;
	vPosition = Position;
	gl_Position=  ProjectionView * Position;
}